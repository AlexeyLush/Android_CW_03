<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".StudentsActivity">
    <TextView
        android:id="@+id/textview_students_table"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_margin="16dp"
        android:layout_height="320dp"/>


    <Button
        android:id="@+id/button_sort_by_name"
        android:text="Сортировка по именеи"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>
    <Button
        android:id="@+id/button_sort_random"
        android:text="Случайная сортировка"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_width="fill_parent" />


    <TextView
        android:text="На этой странице дан список студентов, порядок которого вы можете поменять"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

</LinearLayout>